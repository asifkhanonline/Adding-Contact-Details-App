<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatedetails">

    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/profile_image"
        android:layout_width="165dp"
        android:layout_height="154dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="517dp"
        android:src="@drawable/asuf"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="270dp"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorAccent">
        <EditText

            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Full Name"
            android:inputType="text"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="63dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="323dp"
        android:layout_marginBottom="380dp"
        app:srcCompat="@drawable/ic_perm_identity_black_24dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="350dp"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorAccent">
        <EditText

            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="text"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="67dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="322dp"
        android:layout_marginBottom="303dp"
        app:srcCompat="@drawable/ic_phone_black_24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="425dp"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorAccent">
        <EditText

            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="57dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="327dp"
        android:layout_marginBottom="232dp"
        app:srcCompat="@drawable/ic_message_black_24dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorAccent">

        <EditText

            android:id="@+id/addr"
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="text"
            android:textSize="15dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="63dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="153dp"
        app:srcCompat="@drawable/ic_location_city_black_24dp" />
    <Button
        android:id="@+id/delete"
        android:layout_width="300dp"
        android:layout_marginTop="580dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_file"
        android:text="Delete"

        android:textColor="#FFFFFF"
        android:textSize="20dp" />
    <Button
        android:id="@+id/update"
        android:layout_width="300dp"
        android:layout_marginTop="650dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_file"
        android:text="update"

        android:textColor="#FFFFFF"
        android:textSize="20dp" />




</RelativeLayout>

